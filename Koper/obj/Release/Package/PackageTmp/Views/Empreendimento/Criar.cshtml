@model Koper.Models.Empreendimento

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/buttons/1.5.1/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.print.min.js "></script>
@*<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">*@

<center>
    <br />
    
        <div style="max-width: 700px;">
            <div class="card" style="max-width: 600px;">
                <div class="card-header bg-info text-white">
                    <i>CADASTRO - EMPREENDIMENTO</i>
                </div>
                <div class="card-body" style="align-content: flex-start !important; text-align:left !important;">

                    <br />


                        <div id="formInformacoesGerais">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label for="nome">Nome</label>
                                    <div>
                                        @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                        @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="dataInicio">Data Início</label>
                                    <div>
                                        <input class="form-control text-box single-line" data-val="true" data-val-date="Data Inválida" id="dataInicio" name="dataInicio" type="date" value="" required />
                                        @Html.ValidationMessageFor(model => model.dataInicio, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="dataConclusao">Data Conclusão</label>
                                    <div>
                                        <input class="form-control text-box single-line" data-val="true" data-val-date="Data Inválida" id="dataConclusao" name="dataConclusao" type="date" value="" required />
                                        @Html.ValidationMessageFor(model => model.dataConclusao, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="idTipo_Empreendimento">Tipo</label>
                                    <div>
                                        @Html.DropDownList("idTipo_Empreendimento", null, htmlAttributes: new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(model => model.idTipo_Empreendimento, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="endereco">Endereço</label>
                                    <div>
                                        @Html.EditorFor(model => model.endereco, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                        @Html.ValidationMessageFor(model => model.endereco, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label for="area_total_text">Área Total</label>
                                    <div>
                                        <input class="form-control text-box single-line" data-val="true" data-val-number="O campo precisa ser um número" id="area_total_text" name="area_total_text" type="number" min="0" step="0.01" placeholder='0,00' required />
                                        <span class="field-validation-valid text-danger" data-valmsg-for="area_total_text" data-valmsg-replace="true"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div>
                                        <input type="submit" value="Salvar" class="btn btn-success" /> ou @Html.ActionLink("Voltar", "Index")
                                    </div>
                                </div>
                            }
                        </div>

      

                </div>

            </div>
            <br /><br />

        </div>
   
</center>
